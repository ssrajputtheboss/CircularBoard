<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteY="100dp">

    <LinearLayout
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:dividerPadding="10dp"
        android:id="@+id/message_view"
        android:visibility="invisible"
        android:orientation="horizontal">

        <EditText
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="20dp"
            android:background="@drawable/message_bg"
            android:id="@+id/message" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:id="@+id/done_button"
            android:background="@drawable/button_bg"
            android:textColor="@color/yellow" />

    </LinearLayout>

    <LinearLayout
        tools:ignore="MissingConstraints"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:dividerPadding="0dp"
        android:id="@+id/linear_layout"
        android:orientation="horizontal">

        <TextView
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text_one"
            android:textSize="20dp"
            android:text=""
            android:gravity="center" />

        <TextView
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text_two"
            android:textSize="20dp"
            android:text="" />

        <TextView
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text_three"
            android:textSize="20dp"
            android:text="" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/space_button"
        android:background="@drawable/circular_button"
        android:text="space"
        app:layout_editor_absoluteX="0px"
        app:layout_editor_absoluteY="0px"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:id="@+id/space_button2"
        android:background="@drawable/circular_button"
        android:text="space"
        android:visibility="invisible"
        app:layout_editor_absoluteX="0px"
        app:layout_editor_absoluteY="0px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel1"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel2"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel3"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel4"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel5"
        android:visibility="invisible"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel6"
        android:visibility="invisible"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel7"
        android:visibility="invisible"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

    <com.lukedeighton.wheelview.WheelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel8"
        android:visibility="invisible"
        app:layout_editor_absoluteY="0px"
        app:layout_editor_absoluteX="0px"
        app:repeatItems="true"
        app:selectionAngle="30.0"
        app:wheelItemRadius="20px"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

